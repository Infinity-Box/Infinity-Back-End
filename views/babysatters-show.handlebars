<a href="/babysatters">Back to Babysitters List</a>
<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <h1>{{babysatter.title}}</h1>
    <p>{{babysatter.description}}</p>
    <p><a href="/babysatters/{{babysatter._id}}/edit">Edit</a></p>
    <p><form method="POST" action="/babysatters/{{babysatter._id}}?_method=DELETE">
        <button class="btn btn-primary" type="submit">Delete</button>
    </form></p>

    <hr>

    <!-- Review form -->
    {{> review-form}}
    <hr>

    <!-- Show Reviews -->
    {{#each reviews}}
      {{> review}}
    {{/each}}

  </div>
</div>
